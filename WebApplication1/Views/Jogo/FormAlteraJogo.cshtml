@model JogoModel
@{
    ViewData["Title"] = "FormAlteraJogo";
}

    <form action="/Jogo/AtualizarJogo/@Model.Id" method="post">
        <h1>Cadastro de jogo</h1>
        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" value="@Model.Nome" type="text" class="form-control" id="nome" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label asp-for="plataforma"></label>
            <select asp-for="plataforma"
                    asp-items="@Html.GetEnumSelectList<Plataforma>()">
                <option>Selecione</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Genero"></label>
            <select asp-for="GeneroId" asp-items="@ViewBag.genero">
                <option>Selecione</option>
            </select>
        </div>
        <div class="form-group">
            <input asp-for="Disponivel" type="checkbox" >Disponivel    
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

